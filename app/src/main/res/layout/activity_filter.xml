<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:layout_alignParentBottom="true"
    android:layout_margin="45dp"
    android:background="#ffffff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skills"
        android:id="@+id/skillsTab"
        android:layout_marginStart="6dp"
        app:layout_constraintBottom_toBottomOf="@+id/closeBtn"
        app:layout_constraintTop_toTopOf="@+id/closeBtn"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Company"
        android:id="@+id/companyTab"
        android:layout_marginStart="6dp"
        app:layout_constraintBottom_toBottomOf="@+id/closeBtn"
        app:layout_constraintTop_toTopOf="@+id/closeBtn"
        app:layout_constraintStart_toEndOf="@id/skillsTab" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Country"
        android:id="@+id/locationTab"
        android:layout_marginStart="6dp"
        app:layout_constraintBottom_toBottomOf="@+id/closeBtn"
        app:layout_constraintTop_toTopOf="@+id/closeBtn"
        app:layout_constraintStart_toEndOf="@id/companyTab" />

    <ImageView
        android:id="@+id/closeBtn"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="6dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_close_btn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/locationTab"
        app:layout_constraintEnd_toEndOf="parent" />

    <RadioGroup
        android:id="@+id/radioGrp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/skillsTab" />
</androidx.constraintlayout.widget.ConstraintLayout>